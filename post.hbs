{{!< default}}
{{> header}}

<div class="wrapper">
	<main class="main exit" role="main">
		{{#post}}
		<article class="article single" role="article">
			<header class="post-header">
				<time class="date" datetime="MM-DD-YYYY">{{date format="dddd - MMM DD, YYYY"}}</time>
				<h1 class="post-title">{{title}}</h1>
				<img class="hero-image" src="{{image}}" />
			</header>

			<section class="post-content">{{content}}</section>

			<footer class="post-meta">
				{{#author}}
					<section class="author">
						<img src="{{image}}" alt="" />
						<h1>{{name}}</h1>
						<p>Twitter: <a href="{{website}}">@kreativeking</a></p>
						<p>{{bio}}</p>
					</section>
				{{/author}}
				{{#if tags}}
					<ul class="tags">
					{{#foreach tags}}
						<li><a href="{{url}}">{{name}}</a></li>
					{{/foreach}}
					</ul>
				{{/if}}
			</footer>
		</article>
		{{/post}}

		{{> comments}}
		
		{{#if pagination}}
		<div class="pagination">
			{{{pagination}}}
		</div>
		{{/if}}
	</main>
</div>

{{> footer}}